{
  "settingsInheritedFrom": "xinYG/whitesource-config@main",
  "scanSettings": {
    "enableIaC": true
  },
  "remediateSettings": {
    "enableRenovate": true,
    "extends": [
    "config:base",
    "schedule:daily"
    ],
    "kubernetes": {
    "fileMatch": ["clusters/.+\\.yaml$"]
    },

    "helm-values": {
    "fileMatch": ["clusters/.+\\.yaml$"]
    },

    "aliases": {
    "stable": "https://charts.helm.sh/stable",
    "jetstack": "https://charts.jetstack.io",
    "prometheus-community": "https://prometheus-community.github.io/helm-charts",
    "coredns": "https://coredns.github.io/helm",
    "kiali-helm": "https://kiali.org/helm-charts",
    "fluent": "https://fluent.github.io/helm-charts"
    }
  },

}

